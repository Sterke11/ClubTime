<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearClub">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="780dp">

            <TextView
                android:id="@+id/tv_IdClub"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="256dp"
                android:text="ID Club:"
                android:textColor="#0091BF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_IdClub"
                android:layout_width="243dp"
                android:layout_height="38dp"
                android:layout_marginTop="288dp"
                android:background="@drawable/rounded_border_textview"
                android:inputType="text"
                android:paddingLeft="10px"
                android:paddingTop="10px"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#0091BF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgEncabezado" />

            <ImageView
                android:id="@+id/imgEncabezado"
                android:layout_width="417dp"
                android:layout_height="103dp"
                android:padding="0px"
                android:paddingTop="0px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/rectangle1" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="200dp"
                android:layout_height="129dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgEncabezado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/logogrande" />

            <TextView
                android:id="@+id/tvClubs"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="128dp"
                android:fontFamily="@font/roboto"
                android:text="Crea un Club"
                android:textColor="#03A9F4"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_Nombre"
                android:layout_width="243dp"
                android:layout_height="38dp"

                android:layout_marginTop="372dp"
                android:background="@drawable/rounded_border_textview"
                android:inputType="text"
                android:paddingLeft="10px"
                android:paddingTop="10px"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#0091BF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_Nombre"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="336dp"
                android:text="Nombre del Club:"
                android:textColor="#0091BF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_Pass"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="336dp"
                android:text="ContraseÃ±a:"
                android:textColor="#0091BF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_Pass"
                android:layout_width="243dp"
                android:layout_height="38dp"
                android:layout_marginBottom="288dp"
                android:background="@drawable/rounded_border_textview"
                android:inputType="textPassword"
                android:paddingLeft="10px"
                android:paddingTop="10px"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#0091BF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imgAnt"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/fechaazulizq" />

            <Button
                android:id="@+id/btCrearClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="196dp"
                android:background="@drawable/botonazulfuertea"
                android:paddingTop="0px"
                android:paddingBottom="5px"
                android:text="Crear club"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>