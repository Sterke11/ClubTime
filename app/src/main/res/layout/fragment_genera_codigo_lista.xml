<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.generacodigolista.GeneraCodigoListaFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imgEncabezado4"
        android:layout_width="417dp"
        android:layout_height="103dp"
        android:padding="0px"
        android:paddingTop="0px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle1" />


    <ImageView
        android:id="@+id/imgLogo4"
        android:layout_width="200dp"
        android:layout_height="129dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgEncabezado4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logogrande" />

    <TextView
        android:id="@+id/tv_Clase"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:text="La clase ha iniciado"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEncabezado4" />

    <TextView
        android:id="@+id/tv_codigoGenerado"
        android:layout_width="245dp"
        android:layout_height="151dp"
        android:layout_marginBottom="8dp"
        android:text="Codigo"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bt_generaCodigo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_generaCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:background="@drawable/botonazulfuertea"
        android:paddingBottom="15px"
        android:text="Generar Codigo"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>